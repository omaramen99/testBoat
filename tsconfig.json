{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@style/*": ["client/styles/*"],
      "@component/*": ["client/components/*"],
      "@three/*": ["node_modules/@types/three/examples/jsm/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
    
  },
  
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "client/components/BoatCustomziator/Sketch/Custom/GLTFLoader/index.js"
  ],
  "exclude": ["node_modules"]
}
